<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime: Required for notarization -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory: Required for V8/Electron -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation: Required for native modules like better-sqlite3 -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow DYLD environment variables: May be needed for some native modules -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- File access: Read user-selected files (file dialogs) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Network access: Required for auto-updates and potential API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
